#include <stdio.h>
# include <stdlib.h>
#include <time.h>
#define Board_rows 6
#define Board_columns 7
int bin = 0;
int board[Board_rows][Board_columns];
char name1[10];
char name2[10];
int player = 1;
void initializeBoard()
{
	for (int i = 0;i < Board_rows;i++)
	{
		for (int j = 0;j < Board_columns;j++)
		{
			board[i][j] = 0;
		}
	}
}
void printBoard()
{
	for (int i = 0;i < Board_rows;i++)
	{
		for (int j = 0;j < Board_columns ;j++)
		{
			printf("|%d", board[i][j]);
		}
		printf("|\n");
	}
	printf("---------------\n");
}
void fill_bin()
{
	int level;

	for (level = Board_rows - 1; level >= 0; level--)
	{
		if (board[level][bin] == 0)
		{
			board[level][bin] = player;
			break;
		}
	}
}

void choose()
{
	int c;

	while (1)
	{
		printf("\nChoose bin: ");
		scanf_s(" %d", &c);
		switch (c)
		{
		case 1:
			bin = 0;
			break;
		case 2:
			bin = 1;
			break;
		case 3:
			bin = 2;
			break;
		case 4:
			bin = 3;
			break;
		case 5:
			bin = 4;
			break;
		case 6:
			bin = 5;
			break;
		case 7:
			bin = 6;
			break;
		default:
			bin = 666;
			printf("\nWrong letter! Try again.\n\n");
			printBoard();
		}
		if ((bin >= 0 && bin <= 6) && (board[0][bin] == 0))
		{
			fill_bin();
			player = (player == 1) ? 2 : 1;
			break;
		}
	}
}


 main() {
	
	printf("Enter the first player name : ");
	scanf_s("%9s", name1, 10);
	printf("Enter the second player name : ");
	scanf_s("%9s", name2, 10);
	initializeBoard();
	printBoard();
	srand(time(NULL));
	int i = rand() % 2;
	 if (i == 0) {
		 printf("player one starts\n");
		 player = 1;
	}
	 else {
		 printf("player two starts\n");
		 player = 2;
	}
	 while (1)
	 {
		 printf("Player %d, your turn!\n", player);
		 choose();
		 printf("\n\n");
		 printBoard();
		 if (check(1))
		 {
			 printf("\n\nPlayer 1 wins!\n\n");
			 break;
		 }
		 if (check(2))
		 {
			 printf("\n\nPlayer 2 wins!\n\n");
			 break;
		 }
	 }
}
